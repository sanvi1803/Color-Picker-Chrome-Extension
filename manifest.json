{
  "name": "Color Picker",
  "version": "0.0.1",
  "description": "Color Picker Extension",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/picker-32.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/picker-16.png",
    "32": "images/picker-32.png",
    "48": "images/picker-48.png"
  },
  "options_page": "options.html",
  "permissions": ["storage", "activeTab", "scripting"]
}
